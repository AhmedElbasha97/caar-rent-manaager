<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ الثيم الرئيسي في الوضع الليلي -->
    <style name="Theme.AppName.NoActionBar" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:statusBarColor">#66A5B4</item> <!-- لون غامق مناسب -->
        <item name="android:windowLightStatusBar">true</item> <!-- أيقونات فاتحة -->
        <item name="android:navigationBarColor">#66A5B4</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- ✅ Splash Theme أثناء الوضع الليلي -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- ✅ خلفية الوضع الليلي -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

</resources>