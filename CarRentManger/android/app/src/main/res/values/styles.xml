<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ الثيم الرئيسي المستخدم في AndroidManifest -->
    <style name="Theme.AppName.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#66A5B4</item> <!-- لون شريط الحالة -->
        <item name="android:windowLightStatusBar">true</item> <!-- أيقونات بيضاء -->
        <item name="android:navigationBarColor">#66A5B4</item> <!-- شريط التنقل -->
        <item name="android:windowLightNavigationBar">true</item> <!-- أيقونات داكنة -->
    </style>

    <!-- ✅ ثيم الإقلاع (Splash screen) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- ✅ ثيم خلفي عند بدء تشغيل التطبيق -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

</resources>
